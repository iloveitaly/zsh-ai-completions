#compdef ipython

local context state state_descr line
typeset -A opt_args

_arguments -S \
  '(--debug)--debug[Set log level to logging.DEBUG (maximize logging output)]' \
  '(--show-config)--show-config[Show the application configuration (human-readable format)]' \
  '(--show-config-json)--show-config-json[Show the application configuration (json format)]' \
  '(--quiet)--quiet[Set log level to logging.CRITICAL (minimize logging output)]' \
  '(--init)--init[Initialize profile with default config files]' \
  '(--autoindent --no-autoindent)--autoindent[Turn on autoindenting]' \
  '(--autoindent --no-autoindent)--no-autoindent[Turn off autoindenting]' \
  '(--automagic --no-automagic)--automagic[Turn on the auto calling of magic commands]' \
  '(--automagic --no-automagic)--no-automagic[Turn off the auto calling of magic commands]' \
  '(--pdb --no-pdb)--pdb[Enable auto calling the pdb debugger after every exception]' \
  '(--pdb --no-pdb)--no-pdb[Disable auto calling the pdb debugger after every exception]' \
  '(--pprint --no-pprint)--pprint[Enable auto pretty printing of results]' \
  '(--pprint --no-pprint)--no-pprint[Disable auto pretty printing of results]' \
  '(--color-info --no-color-info)--color-info[Display information about objects using colors]' \
  '(--color-info --no-color-info)--no-color-info[Disable using colors for info related things]' \
  '(--ignore-cwd --no-ignore-cwd)--ignore-cwd[Exclude the current working directory from sys.path]' \
  '(--ignore-cwd --no-ignore-cwd)--no-ignore-cwd[Include the current working directory in sys.path]' \
  '(--nosep)--nosep[Eliminate all spacing between prompts]' \
  '(--pylab)--pylab=[Pre-load matplotlib and numpy]::backend:(agg auto gtk gtk3 gtk4 inline ipympl nbagg notebook osx pdf ps qt qt4 qt5 qt6 svg tk webagg widget wx)' \
  '(--matplotlib)--matplotlib=[Configure matplotlib for interactive use]::backend:(agg auto gtk gtk3 gtk4 inline ipympl nbagg notebook osx pdf ps qt qt4 qt5 qt6 svg tk webagg widget wx)' \
  '(--autoedit-syntax --no-autoedit-syntax)--autoedit-syntax[Turn on auto editing of files with syntax errors]' \
  '(--autoedit-syntax --no-autoedit-syntax)--no-autoedit-syntax[Turn off auto editing of files with syntax errors]' \
  '(--simple-prompt --no-simple-prompt)--simple-prompt[Force simple minimal prompt using raw_input]' \
  '(--simple-prompt --no-simple-prompt)--no-simple-prompt[Use a rich interactive prompt with prompt_toolkit]' \
  '(--banner --no-banner)--banner[Display a banner upon starting IPython]' \
  '(--banner --no-banner)--no-banner[Don'\''t display a banner upon starting IPython]' \
  '(--confirm-exit --no-confirm-exit)--confirm-exit[Confirm when you try to exit IPython]' \
  '(--confirm-exit --no-confirm-exit)--no-confirm-exit[Don'\''t prompt the user when exiting]' \
  '(--tip --no-tip)--tip[Shows a tip when IPython starts]' \
  '(--tip --no-tip)--no-tip[Don'\''t show tip when IPython starts]' \
  '(--term-title --no-term-title)--term-title[Enable auto setting the terminal title]' \
  '(--term-title --no-term-title)--no-term-title[Disable auto setting the terminal title]' \
  '(--classic)--classic[Gives IPython a similar feel to the classic Python prompt]' \
  '(--quick)--quick[Enable quick startup with no config files]' \
  '(-i)-i[Become interactive afterwards]' \
  '(--log-level)--log-level=[Set the log level]:log level:(0 10 20 30 40 50 DEBUG INFO WARN ERROR CRITICAL)' \
  '(--profile-dir)--profile-dir=[Set the profile location directly]:profile directory:_files -/' \
  '(--profile)--profile=[The IPython profile to use]:profile' \
  '(--ipython-dir)--ipython-dir=[The name of the IPython directory]:ipython directory:_files -/' \
  '(--config)--config=[Path to an extra config file to load]:config file:_files' \
  '(--autocall)--autocall=[Make IPython automatically call any callable object]:autocall:(0 1 2)' \
  '(--colors)--colors=[Set the color scheme]:color scheme:(nocolor neutral linux lightbg)' \
  '(--theme)--theme=[Set the color scheme]:theme:(nocolor neutral linux lightbg)' \
  '(--logfile)--logfile=[The name of the logfile to use]:logfile:_files' \
  '(--logappend)--logappend=[Start logging to the given file in append mode]:logfile:_files' \
  '(-c)-c+[Execute the given command string]:command string' \
  '(-m)-m+[Run the module as a script]:module' \
  '*--ext=[Dotted module name(s) of one or more IPython extensions to load]:extension' \
  '(--gui)--gui=[Enable GUI event loop integration]:gui:(asyncio glut gtk gtk2 gtk3 gtk4 osx pyglet qt qt5 qt6 tk wx gtk2 qt4)' \
  '(--cache-size)--cache-size=[Set the size of the output cache]:int' \
  '1: : _alternative "subcommands:subcommand:((profile\:Create\ and\ manage\ IPython\ profiles kernel\:Start\ a\ kernel\ without\ an\ attached\ frontend locate\:Print\ the\ path\ to\ the\ IPython\ dir history\:Manage\ the\ IPython\ history\ database))" "files:file:_files"' \
  '*::args:_files'
