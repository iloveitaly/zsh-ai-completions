#compdef fastmod

_arguments -S \
  '--accept-all[Automatically accept all changes]' \
  '(-F --fixed-strings)'{-F,--fixed-strings}'[Treat REGEX as a literal string]' \
  '(-h --help)'{-h,--help}'[Prints help information]' \
  '--hidden[Search hidden files]' \
  '(-i --ignore-case)'{-i,--ignore-case}'[Perform case-insensitive search]' \
  '(-m --multiline)'{-m,--multiline}'[Have regex work over multiple lines]' \
  '--print-changed-files[Print the paths of changed files]' \
  '(-V --version)'{-V,--version}'[Prints version information]' \
  '*'{-d,--dir}'[Path whose descendent files are to be explored]:directory:_files -/' \
  '*'{-e,--extensions}'[Comma-delimited list of file extensions to process]:extensions' \
  '*'{-g,--glob}'[Space-delimited list of globs to process]:glob' \
  '*--iglob[Space-delimited list of case-insensitive globs to process]:glob' \
  '1:regular expression' \
  '2:substitution' \
  '*:file or directory:_files'
