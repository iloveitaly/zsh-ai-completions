#compdef act

_arguments -S \
  '--action-cache-path=[Defines the path where the actions get cached and host workspaces created]:directory:_files' \
  '--action-offline-mode[If action contents exists, it will not be fetch and pull again]' \
  '(-a --actor)'{-a,--actor=}'[user that triggered the event]:user:(nektos/act)' \
  '--artifact-server-addr=[Defines the address to which the artifact server binds]:ip address:(192.168.7.166)' \
  '--artifact-server-path=[Defines the path where the artifact server stores uploads and retrieves downloads from]:directory:_files' \
  '--artifact-server-port=[Defines the port where the artifact server listens]:port:(34567)' \
  '(-b --bind)'{-b,--bind}'[bind working directory to container, rather than copy]' \
  '--bug-report[Display system information for bug report]' \
  '--cache-server-addr=[Defines the address to which the cache server binds]:ip address:(192.168.7.166)' \
  '--cache-server-external-url=[Defines the external URL for if the cache server is behind a proxy]:url' \
  '--cache-server-path=[Defines the path where the cache server stores caches]:directory:_files' \
  '--cache-server-port=[Defines the port where the artifact server listens]:port' \
  '--concurrent-jobs=[Maximum number of concurrent jobs to run]:int' \
  '--container-architecture=[Architecture which should be used to run containers]:architecture' \
  '*--container-cap-add=[kernel capabilities to add to the workflow containers]:capability' \
  '*--container-cap-drop=[kernel capabilities to remove from the workflow containers]:capability' \
  '--container-daemon-socket=[URI to Docker Engine socket]:uri' \
  '--container-options=[Custom docker container options for the job container]:options' \
  '--defaultbranch=[the name of the main branch]:branch' \
  '--detect-event[Use first event type from workflow as event that triggered the workflow]' \
  '(-C --directory)'{-C,--directory=}'[working directory]:directory:_files -/' \
  '(-n --dryrun)'{-n,--dryrun}'[disable container creation, validates only workflow correctness]' \
  '*--env=[env to make available to actions with optional value]:env' \
  '--env-file=[environment file to read and use as env in the containers]:file:_files' \
  '(-e --eventpath)'{-e,--eventpath=}'[path to event JSON file]:file:_files' \
  '--github-instance=[GitHub instance to use]:instance:(github.com)' \
  '(-g --graph)'{-g,--graph}'[draw workflows]' \
  '(-h --help)'{-h,--help}'[help for act]' \
  '*--input=[action input to make available to actions]:input' \
  '--input-file=[input file to read and use as action input]:file:_files' \
  '--insecure-secrets[NOT RECOMMENDED! Doesnt hide secrets while printing logs]' \
  '(-j --job)'{-j,--job=}'[run a specific job ID]:job id' \
  '--json[Output logs in json format]' \
  '(-l --list)'{-l,--list}'[list workflows]' \
  '--list-options[Print a json structure of compatible options]' \
  '*--local-repository=[Replaces the specified repository and ref with a local folder]:repo' \
  '--log-prefix-job-id[Output the job id within non-json logs instead of the entire name]' \
  '--man-page[Print a generated manual page to stdout]' \
  '*--matrix=[specify which matrix configuration to include]:matrix' \
  '--network=[Sets a docker network name]:network:(host)' \
  '--no-cache-server[Disable cache server]' \
  '--no-recurse[Flag to disable running workflows from subdirectories of specified path]' \
  '--no-skip-checkout[Use actions/checkout instead of copying local files into container]' \
  '(-P --platform)'{-P,--platform=}'[custom image to use per platform]:platform' \
  '--privileged[use privileged mode]' \
  '(-p --pull)'{-p,--pull}'[pull docker image(s) even if already present]' \
  '(-q --quiet)'{-q,--quiet}'[disable logging of output from steps]' \
  '--rebuild[rebuild local action docker image(s) even if already present]' \
  '--remote-name=[git remote name that will be used to retrieve url of git repo]:remote:(origin)' \
  '--replace-ghe-action-token-with-github-com=[Personal access token for private actions on GitHub]' \
  '*--replace-ghe-action-with-github-com=[If you are using GitHub Enterprise Server and allow specified actions from GitHub]' \
  '(-r --reuse)'{-r,--reuse}'[dont remove container(s) on successfully completed workflow(s) to maintain state between runs]' \
  '--rm[automatically remove container(s)/volume(s) after a workflow(s) failure]' \
  '(-s --secret)'{-s,--secret=}'[secret to make available to actions with optional value]:secret' \
  '--secret-file=[file with list of secrets to read from]:file:_files' \
  '--strict[use strict workflow schema]' \
  '--use-gitignore[Controls whether paths specified in .gitignore should be copied into container]' \
  '--use-new-action-cache[Enable using the new Action Cache for storing Actions locally]' \
  '--userns=[user namespace to use]:userns' \
  '--validate[validate workflows]' \
  '*--var=[variable to make available to actions with optional value]:variable' \
  '--var-file=[file with list of vars to read from]:file:_files' \
  '(-v --verbose)'{-v,--verbose}'[verbose output]' \
  '--version[version for act]' \
  '(-w --watch)'{-w,--watch}'[watch the contents of the local repo and run when files change]' \
  '(-W --workflows)'{-W,--workflows=}'[path to workflow file(s)]:directory:_files' \
  '1:event name:(push pull_request pull_request_target push release registry_package watch repository_dispatch workflow_dispatch workflow_run schedule issue_comment issues label milestone page_build project project_card project_column public status check_run check_suite create delete deployment deployment_status fork gollum)'
