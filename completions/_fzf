#compdef fzf

local -a opts
opts=(
  '(-x --extended)'{-x,--extended}'[Extended-search mode]'
  '(+x --no-extended)'{+x,--no-extended}'[Disable extended-search mode]'
  '(-e --exact)'{-e,--exact}'[Enable Exact-match]'
  '(-i --ignore-case)'{-i,--ignore-case}'[Case-insensitive match]'
  '(+i --no-ignore-case)'{+i,--no-ignore-case}'[Case-sensitive match]'
  '--scheme=[Scoring scheme]:scheme:(default path history)'
  '--literal[Do not normalize latin script letters before matching]'
  '(-n --nth)'{-n,--nth}'=[Field index expressions]:expressions'
  '--with-nth=[Transform line presentation]:expressions'
  '(-d --delimiter)'{-d,--delimiter}'=[Field delimiter regex]:delimiter'
  '(+s --no-sort)'{+s,--no-sort}'[Do not sort the result]'
  '--tail=[Maximum items to keep in memory]:number'
  '--track[Track current selection when result is updated]'
  '--tac[Reverse input order]'
  '--disabled[Do not perform search]'
  '--tiebreak=[Sort criteria for ties]:criteria'
  '(-m --multi)'{-m,--multi}'[Enable multi-select]'
  '--no-mouse[Disable mouse]'
  '--bind=[Custom key bindings]:bindings'
  '--cycle[Enable cyclic scroll]'
  '--keep-right[Keep right end of line visible on overflow]'
  '--scroll-off=[Screen lines to keep when scrolling]:lines'
  '--no-hscroll[Disable horizontal scroll]'
  '--hscroll-off=[Screen columns to keep when scrolling]:columns'
  '--filepath-word[Make word-wise movements respect path separators]'
  '--jump-labels=[Label characters for jump mode]:characters'
  '--height=[Window height]:height'
  '--min-height=[Minimum height for percentage height]:height'
  '--layout=[Choose layout]:layout:(default reverse reverse-list)'
  '--border=[Draw border]:style'
  '--margin=[Screen margin]:margin'
  '--padding=[Padding inside border]:padding'
  '--info=[Finder info style]:style'
  '--prompt=[Input prompt]:prompt'
  '--pointer=[Pointer to current line]:pointer'
  '--marker=[Multi-select marker]:marker'
  '--header=[Header string]:header'
  '--header-lines=[Treat first N lines as header]:number'
  '--ansi[Enable ANSI color code processing]'
  '--tabstop=[Number of spaces for tabs]:spaces'
  '--color=[Color scheme]:scheme'
  '--history=[History file]:file:_files'
  '--history-size=[Maximum history entries]:number'
  '--preview=[Preview command]:command'
  '--preview-window=[Preview window layout]:layout'
  '(-q --query)'{-q,--query}'=[Start with given query]:query'
  '(-1 --select-1)'{-1,--select-1}'[Automatically select if only one match]'
  '(-0 --exit-0)'{-0,--exit-0}'[Exit immediately if no match]'
  '(-f --filter)'{-f,--filter}'=[Filter mode]:filter'
  '--print-query[Print query as first line]'
  '--expect=[Keys to complete fzf]:keys'
  '--read0[Read input with NUL delimiter]'
  '--print0[Print output with NUL delimiter]'
  '--sync[Synchronous search for multi-staged filtering]'
  '--version[Display version]'
  '--help[Show help]'
)

_arguments -s -S $opts

